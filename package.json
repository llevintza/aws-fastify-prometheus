{
  "name": "fastify-prometheus-metrics",
  "version": "1.0.0",
  "description": "A comprehensive Fastify plugin for Prometheus metrics collection with AWS CloudWatch integration",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rimraf dist",
    "dev": "ts-node src/index.ts",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --coverage --ci --reporters=jest-junit",
    "type-check": "tsc --noEmit",
    "prepare": "husky install",
    "prepublishOnly": "yarn clean && yarn build && yarn test",
    "semantic-release": "semantic-release"
  },
  "keywords": [
    "fastify",
    "prometheus",
    "metrics",
    "aws",
    "cloudwatch",
    "monitoring",
    "observability",
    "nodejs",
    "typescript",
    "plugin"
  ],
  "author": "llevintza",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/llevintza/aws-node-prometheus.git"
  },
  "bugs": {
    "url": "https://github.com/llevintza/aws-node-prometheus/issues"
  },
  "homepage": "https://github.com/llevintza/aws-node-prometheus#readme",
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "yarn@4.6.0",
  "peerDependencies": {
    "fastify": "^4.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@eslint/js": "^9.31.0",
    "@jest/globals": "^29.7.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/jest": "^29.5.8",
    "@types/node": "^22",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-prettier": "^5.0.1",
    "fastify": "^4.24.3",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "semantic-release": "^22.0.8",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "@aws-sdk/client-cloudwatch": "^3.848.0",
    "fastify-plugin": "^4.5.1",
    "prom-client": "^15.1.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
